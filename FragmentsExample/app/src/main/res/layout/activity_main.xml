<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/topFragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/botFragmentContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/botFragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/firstFragmentToTopContainerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topFragmentContainer" />

    <Button
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/firstFragmentToBottomContainerButton"
        android:id="@+id/firstFragmentToTopContainerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="First fragment to top container"/>

    <Button
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/secondFragmentToTopContainerButton"
        android:id="@+id/firstFragmentToBottomContainerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="First fragment to bottom container"/>

    <Button
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/secondFragmentToBottomContainerButton"
        android:id="@+id/secondFragmentToTopContainerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Second fragment to top container"/>

    <Button
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/secondFragmentToBottomContainerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Second fragment to bottom container"/>

</androidx.constraintlayout.widget.ConstraintLayout>